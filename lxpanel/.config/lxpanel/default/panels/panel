  align=left
  iconsize=18
}
Plugin {
  type=space
  Config {
    Size=5
  }
}
Plugin {
  type=menu
  Config {
    system {
    }
    separator {
    }
    item {
      command=run
    }
    separator {
    }
    item {
      command=logout
      image=application-exit-symbolic
    }
    item {
      name=Reiniciar
      image=view-refresh-symbolic
      action=systemctl -i reboot
    }
    item {
      name=Desligar
      image=system-shutdown-symbolic
      action=systemctl -i poweroff
    }
    image=/home/administrador/.config/lxpanel/default/assets/icons/arch-logo.png
  }
}
